@using MetaGraffiti.Web.Admin.Models;
@model CartoViewModel

@Html.Partial("_Nav")

@{
	var place = new CartoPlaceFormModel(Model.Place);
}

<script src="https://maps.googleapis.com/maps/api/js?key=@(AutoConfig.GoogleMapsApiKey)"></script>
<script src="~/Scripts/_graffiti/googleMaps.js"></script>


<div id="map-container">
	<div id="map">
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
		<form method="post" action="@CartoViewModel.GetSaveUrl()">
			@Html.Partial("Forms/_Place", place)
			<hr />
			<div class="row">
				<div class="col">
					<input type="hidden" name="id" value="@Model.Place.Key" />
					<button class="btn btn-primary" type="submit">Save</button>
				</div>
				<div class="col text-right">
					<a class="btn btn-outline-danger js-confirm" href="@CartoViewModel.GetEditUrl(Model.Place.Key)">Reset</a>
				</div>
			</div>
		</form>
	</div>
</div>