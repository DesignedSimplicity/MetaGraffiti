@using MetaGraffiti.Web.Admin.Models;
@model OrthoPlacesViewModel

@Html.Partial("_Nav")

<script>
	$(document).ready(function () {
		$("input").click(function () {
			$("form").submit();
		});
	});
</script>

<form>
	<div class="form-group h2">
		<div class="form-check form-check-inline h1 ortho-color">
			<input class="form-check-input" type="radio" name="year" id="YearAll" value="" @(!Model.SelectedYear.HasValue ? "checked" : "")>
			<label class="form-check-label" for="YearAll">Any Year</label>
		</div>
		@foreach (var year in Model.Years.OrderByDescending(x => x))
		{
			<div class="form-check form-check-inline @(Model.IsSelected(year) ? "" : "ortho-color")">
				<input class="form-check-input" type="radio" name="year" id="Year@(year)" value="@year" @(Model.IsSelected(year) ? "checked" : "")>
				<label class="form-check-label" for="Year@(year)">@year</label>
			</div>
		}
	</div>
	<div class="form-group h4">
		<div class="form-check form-check-inline h3 ortho-color">
			<input class="form-check-input" type="radio" name="country" id="CountryAll" value="" @(Model.SelectedCountry == null ? "checked" : "")>
			<label class="form-check-label" for="CountryAll">Any Country</label>
		</div>
		@foreach (var country in Model.Countries)
		{
			<div class="form-check form-check-inline @(Model.IsSelected(country) ? "" : "ortho-color")">
				<input class="form-check-input" type="radio" name="country" id="Country@(country.ISO2)" value="@country.ISO2" @(Model.IsSelected(country) ? "checked" : "")>
				<label class="form-check-label" for="Country@(country.ISO2)">@country.Name</label>
			</div>
		}
	</div>

</form>
<br />
<table class="table table-striped table-sm">
	<thead class="thead-dark">
		<tr>
			<th class="table-primary text-center">#</th>
			<th>Name</th>
			<th>Region</th>
			<th>Country</th>
			<th>Place</th>
		</tr>
	</thead>
	<tbody>
		@{
			var count = 0;
			foreach (var row in Model.ListPlaces())
			{
				<tr class="@Model.GetStatusCss(row)">
					<td class="text-center">@(++count)</td>
					<td><a href="@HrefHelper.GetImportPlaceUrl(row.Data.Name, row.Data.Country)">@row.Data.Name</a></td>
					<td>@row.Data.Region</td>
					<td>@row.Data.Country</td>
					<td>
						@if (row.Place != null)
						{
							<a href="@HrefHelper.GetPlaceUrl(row.Place)">@row.Place.Name</a>
							<span>@row.Place.Locality <b>@(row.Place.Region?.RegionName ?? "")</b></span>
						}
					</td>
				</tr>
			}
		}
	</tbody>
</table>