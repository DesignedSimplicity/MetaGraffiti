@using MetaGraffiti.Web.Admin.Models;
@model OrthoViewModel

@Html.Partial("_Nav")

<div class="row">
	<div class="col-sm-2">
		<div class="h2"><a class="ortho-color icon-link" href="@OrthoViewModel.GetPlacesUrl()">@IconHelper.PlaceIcon Places</a></div>
		<hr />
		@foreach (var year in Model.Years.OrderByDescending(x => x))
		{
			<div class="h4"><a class="ortho-color" href="@OrthoViewModel.GetPlacesUrl(year)">@year</a></div>
		}
	</div>
	<div class="col-sm-2">
		<div class="h2"><a class="ortho-color icon-link" href="@OrthoViewModel.GetBrowseTracksUrl()">@IconHelper.TrackIcon Tracks</a></div>
		<hr />
		@foreach (var year in Model.Years.OrderByDescending(x => x))
		{
			<div class="h4"><a class="ortho-color" href="@OrthoViewModel.GetBrowseTracksUrl(year.ToString())">@year</a></div>
		}
	</div>
	<div class="col-sm-2">
		<div class="h2"><a class="ortho-color icon-link" href="@OrthoViewModel.GetBrowseImagesUrl()">@IconHelper.FotoIcon Images</a></div>
		<hr />
		
	</div>
	<div class="col-sm-2">
		<div class="h2"><a class="ortho-color icon-link" href="@OrthoViewModel.GetSheetsUrl()">@IconHelper.SheetIcon Sheets</a></div>
		<hr />
		<a class="btn btn-block btn-outline-warning" href="@OrthoViewModel.GetResetUrl()">@IconHelper.RecycleIcon Recycle Import Cache</a>
	</div>
</div>