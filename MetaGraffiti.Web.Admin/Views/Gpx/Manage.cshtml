@using MetaGraffiti.Web.Admin.Models;
@model GpxViewModel

@Html.Partial("_Nav")

@{
	var count = 0;
}

<div class="row">
	<div class="col-sm-6">
		<table class="table table-striped table-sm">
			<thead class="thead-dark">
				<tr>
					<th>#</th>
					<th>UTC Timestamp</th>
					<th>Track Name</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var track in Model.Tracks.OrderBy(x => x.Points.First().Timestamp))
				{
					<tr>
						<td>@(++count)</td>
						<td>@track.Points.First().Timestamp</td>
						<td>@track.Name</td>
						<td class="small">@track.Description</td>
						<td>
							<button class="btn btn-outline-danger">Remove</button>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="col-sm-6">
	</div>
</div>