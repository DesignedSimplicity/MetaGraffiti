@using MetaGraffiti.Web.Admin.Models;
@model PlaceViewModel

@Html.Partial("_Nav")

<script src="https://maps.googleapis.com/maps/api/js?key=@(AutoConfig.GoogleMapsApiKey)"></script>
<script src="~/Scripts/_graffiti/googleMaps.js"></script>
<script>
	var _bounds = null;

	var _places = @Model.GetPlacesJson();

	$(document).ready(function () {
		initMap();

		for (i = 0; i < _places.length; i++) {
			var number = i + 1;
			if (number > 10) number = null;

			var place = _places[i];
			place.marker = markPoint(place.center.lat, place.center.lng, place.name, number);
		}

		if (_places.length > 0) fitBounds(_places[0].bounds);


		$(".js-search-result").hover(function () {
			if (_bounds) _bounds.setMap(null);

			var index = $(this).index();
			var place = _places[index];

			_bounds = drawBounds(place.bounds);

			for (i = 0; i < _places.length; i++) {
				if (i == index) {
					_places[i].marker.setAnimation(google.maps.Animation.BOUNCE);
				} else {
					_places[i].marker.setAnimation(null);
				}
			}
		});

		$(".js-search-result").click(function () {
			$(".js-search-result").css("font-weight", "");
			$(this).css("font-weight", "bold");

			var index = $(this).index();
			var place = _places[index];
			place.marker.setAnimation(null);

			fitBounds(place.bounds);
		});
	});
</script>

<div id="map-container">
	<div id="map">
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
		<h2>Search</h2>
		<div class="row">
			<div class="col">
				<form method="post" action="@PlaceViewModel.GetSearchUrl()">
					<div class="form-group">
						<label for="name">Name</label>
						<div class="input-group">
							<input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.SearchCriteria.Name">
							<div class="input-group-append">
								<button class="btn btn-primary" type="submit">Search</button>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="description">Region</label>
						<input type="text" class="form-control" name="Region" placeholder="Region" value="@Model.SearchCriteria.Region">
					</div>
					<div class="form-group">
						<label for="description">Country</label>
						<input type="text" class="form-control" name="Country" placeholder="Country" value="@Model.SearchCriteria.Country">
					</div>
				</form>
			</div>
			<div class="col">
				<form method="post" action="@PlaceViewModel.GetSearchUrl()">
					<div class="form-group">
						<label for="timezone">Position</label>
						<div class="input-group">
							<input type="text" class="form-control" name="Latitude" placeholder="Latitude" value="@Model.SearchCriteria.Latitude">
							<input type="text" class="form-control" name="Longitude" placeholder="Longitude" value="@Model.SearchCriteria.Longitude">
							<div class="input-group-append">
								<button class="btn btn-info" type="submit">Geocode</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="row">
			<div class="col">
				
			</div>
			<div class="col">
				
			</div>
		</div>
		<hr />
		<h2>Places</h2>
		<table class="table table-striped table-sm">
			<thead class="thead-dark">
				<tr>
					<th class="text-center">#</th>
					<th>Name</th>
					<th>Local Name</th>
					<th>Display Name</th>
					<th>Source Type</th>
					<th>Locality</th>
					<th>Region</th>
				</tr>
			</thead>
			<tbody>
				@{
					var count = 0;
					foreach (var p in Model.SearchResults)
					{
						var existing = (p.Key != p.GoogleKey);
						<tr class="js-search-result @(existing ? " table-success" : "" )">
							<td class="text-center">@(++count)</td>
							<td>
								@if (existing)
								{
									<a href="@CartoViewModel.GetEditUrl(p.Key)">@p.Name</a>
								}
								else
								{
									<a href="@PlaceViewModel.GetPreviewUrl(p.GoogleKey)">@p.Name</a>
								}
							</td>
							<td>@p.LocalName</td>
							<td>@p.DisplayAs</td>
							<td>@p.PlaceType</td>
							<td>@p.Locality</td>
							<td>@(p.Region == null ? "" : p.Region.RegionName) @(p.Country == null ? "" : p.Country.ISO2)</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>