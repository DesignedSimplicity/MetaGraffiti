@using MetaGraffiti.Web.Admin.Models;
@model PlaceViewModel

@Html.Partial("_Nav")

@{
	var place = new CartoPlaceFormModel(Model.Place);
}


<script src="https://maps.googleapis.com/maps/api/js?key=@(AutoConfig.GoogleMapsApiKey)"></script>
<script src="~/Scripts/_graffiti/googleMaps.js"></script>


<div id="map-container">
	<div id="map">
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
		@if (Model.HasConfirmation)
		{
			<div class="alert alert-warning">
				<span class="h4">@Model.ConfirmMessage</span>
				<a href="@CartoViewModel.GetEditUrl(Model.Place.Key)" class="btn btn-sm btn-warning float-right">Edit Existing</a>
			</div>
		}
		<form method="post" action="@PlaceViewModel.GetCreateUrl()">
			@Html.Partial("Forms/_Place", place)
			<hr />
			<div class="row">
				<div class="col">
					<button class="btn btn-primary" type="submit">Create</button>
				</div>
				<div class="col text-right">
					<a class="btn btn-outline-danger js-confirm" href="@PlaceViewModel.GetPreviewUrl(Model.Place.GoogleKey)">Reset</a>
				</div>
			</div>
		</form>
	</div>
</div>