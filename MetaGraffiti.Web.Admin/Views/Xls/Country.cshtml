@using MetaGraffiti.Web.Admin.Models;
@model XlsViewModel

@Html.Partial("_Nav")

<div class="row">
	<div class="col-md-6">
		<table class="table table-striped table-sm">
			<thead class="thead-dark">
				<tr>
					<th class="text-center">#</th>
					<th>Name</th>
					<th>Region</th>
					<th>District</th>
				</tr>
			</thead>
			@{
				var count = 0;
				foreach (var place in Model.ListPlacesOrdered())
				{
					<tr class="@(String.IsNullOrWhiteSpace(place.Country) ? "table-danger" : "")">
						<td class="text-center">@(++count)</td>
						<td><a href="/geo/search/?name=@place.Name @place.Country">@place.Name</a></td>
						<td>@place.Region</td>
						<td>@place.District</td>
					</tr>
				}
			}
		</table>
	</div>
	<div class="col-md-6">
	</div>
</div>
