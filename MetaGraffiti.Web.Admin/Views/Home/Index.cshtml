@using MetaGraffiti.Web.Admin.Models;
@model AdminViewModel
<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<h1 class="meta-title display-1">@SvgHelper.GetIcon("Meta")<span class="font-weight-bold">Meta</span><span>Graffiti</span></h1>
				<div>
					@foreach (var area in Model.Areas)
					{
						if (area != AdminAreas.Home)
						{
							<a class="h1" href="/@(area.ToString())">@area.ToString()</a>
							<span>&nbsp;</span>
						}
					}
				</div>
			</div>
			<div class="col-md-4">
				<div class="mt-2">
					<a href="/place/" class="carto-color meta-title h1">@SvgHelper.GetIcon("types/place")<span>Find Place</span></a>
				</div>
				<div class="mt-2">
					<a href="/track/" class="topo-color meta-title h1">@SvgHelper.GetIcon("types/track")<span>Load Track</span></a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div>
				<a href="/carto/" class="carto-color">
