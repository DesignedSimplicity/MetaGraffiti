@using MetaGraffiti.Web.Core.Models;
@model AdminViewModel
<div class="jumbotron">
	<div class="container">
		<div class="icon-link display-meta"><img src="~/Images/logo.png" /> <span class="font-weight-bold">Meta</span><span>Graffiti</span></div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div>
				<a href="@TopoViewModel.GetTopoUrl()" class="topo-color">
					<div class="icon-link display-2">@SvgHelper.GetIcon("Topo")<span class="font-weight-bold">Topo</span><span>Graffiti</span> </div>
					<div class="h2">Make Trails</div>
				</a>
			</div>
			<hr />
			<div>
				<a href="@CartoViewModel.GetCartoUrl()" class="carto-color">
					<div class="icon-link display-2">@SvgHelper.GetIcon("Carto")<span class="font-weight-bold">Carto</span><span>Graffiti</span></div>
					<div class="h2">Create Maps</div>
				</a>
			</div>
			<hr />
			<div>
				<a href="@OrthoViewModel.GetOrthoUrl()" class="ortho-color">
					<div class="icon-link display-2">@SvgHelper.GetIcon("Ortho")<span class="font-weight-bold">Ortho</span><span>Graffiti</span> </div>
					<div class="h2">Import Data</div>
				</a>
			</div>
			<hr />
			<div>
				<a href="@GeoViewModel.GetGeoUrl()" class="geo-color">
					<div class="icon-link display-2">@SvgHelper.GetIcon("Geo")<span class="font-weight-bold">Geo</span><span>Graffiti</span> </div>
					<div class="h2">Manage Core</div>
				</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="mt-2">
				<a href="@OrthoViewModel.GetBrowseTracksUrl(DateTime.Now.Year.ToString())" class="topo-color h1">@IconHelper.TrackIcon <span>Load Track</span></a>
			</div>
			<hr />
			<div class="mt-2">
				<a href="@OrthoViewModel.GetPlacesUrl(DateTime.Now.Year)" class="carto-color h1">@IconHelper.PlaceIcon <span>Add Place</span></a>
			</div>
